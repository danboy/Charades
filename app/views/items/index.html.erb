<h1>Listing items</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Category</th>
  </tr>

<% @items.each do |items| %>
  <tr>
    <td><%=h items.title %></td>
    <td><%=h items.category_id %></td>
    <td><%= link_to 'Show', items %></td>
    <td><%= link_to 'Edit', edit_item_path(items) %></td>
    <td><%= link_to 'Destroy', items, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New items', new_item_path %>
